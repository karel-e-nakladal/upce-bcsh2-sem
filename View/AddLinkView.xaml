<Window x:Class="WpfApp1.View.AddLinkView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Link" Height="180" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Create a Link to another Entity" Margin="0,0,0,10"/>
            <TextBlock Text="Displayed text" Margin="0,0,0,2"/>
            <TextBox x:Name="Name" Margin="0,0,0,5"/>
            <TextBlock Text="Readable id of the entity you want to link to" Margin="0,5,0,2"/>
            <TextBox x:Name="ReadableId" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Ok" Click="Ok" IsDefault="True" Margin="5" Padding="6"/>
                <Button Content="Cancel" IsCancel="True" Margin="5" Padding="6"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
